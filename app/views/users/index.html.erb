<h1>User listing</h1>

<table>
    <thead>
        <tr>
            <th>Username</th>
        </tr>
    </thead>


<tbody>
<% @users.each do |user| %>
    <tr>
        <td><%= user.username %></td>
        <td>
        <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
    </tr>
<% end %>
</tbody>
</table>
<p>
<% if logged_in? %>
    <%= link_to 'Log Out', logout_path, method: :delete %>
    <h3><%= current_user.username %></h3>
<% else %>
    <%= link_to 'Create a new user', new_user_path %>
<% end %>

</p>